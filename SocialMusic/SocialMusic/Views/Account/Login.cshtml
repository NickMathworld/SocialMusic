@using SocialMusic.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<style>
    .ImageLogin {
        width: 100%;
        border: thick 10px;
    }
    label {
        color: #c1c1c1;
    }
</style>

<div style="position: relative;">
    <div style="position: absolute; left: 10px; top: 25px; z-index: 3;">
        <div class="row" style="display:flex">
            <div style="flex:0%;margin-right:0%">
            </div>
            <div style="flex:50%;margin-right:5%">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/img/im1.jpg" alt="Chania" class="ImageLogin">
                            <div class="carousel-caption">
                                <h3>Design something new</h3>
                                <p> Two wrongs don't make a right.</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="~/img/im6.jpg" alt="Chania" class="ImageLogin">
                            <div class="carousel-caption">
                                <h3>Think in deep</h3>
                                <p>The pen is mightier than the sword.</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="~/img/im7.jpg" alt="Chania" class="ImageLogin">
                            <div class="carousel-caption">
                                <h3>Go so far</h3>
                                <p> When the going gets tough, the tough get going.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div style="flex:20%; margin-top:5%;left:30px">
                <div class="row">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { style = "font: 25px Roboto;" })
                                <div class="">
                                    @Html.TextBoxFor(m => m.Email, new { type = "text", @class = "form-control", @placeholder = "Correo o NickName", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { style = "font: 25px Roboto" })
                                <div class="">
                                    @Html.PasswordFor(m => m.Password, new { type = "password", @class = "form-control", @placeholder = "Password", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="slideTwo">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>
                            <div class="">
                                <button type="submit" class="btn btn-primary" id="login"> Login </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#login").click(function () {
            var a = $("#user").val() + $("#pwd").val();
        });
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}